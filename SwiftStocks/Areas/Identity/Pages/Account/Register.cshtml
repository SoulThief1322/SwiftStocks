@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="auth-wrapper">
    <div class="login-wrapper">
        <div class="form-header-container">
            <h1 class="form-header">Create Your Account</h1>
        </div>

        

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form login">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group @(Model.Input?.Email != null ? "filled" : "")">
                <input asp-for="Input.Email" class="form-input" placeholder=" " autocomplete="username" required />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group @(Model.Input?.Password != null ? "filled" : "")">
                <input asp-for="Input.Password" class="form-input" placeholder=" " autocomplete="new-password" required />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group @(Model.Input?.ConfirmPassword != null ? "filled" : "")">
                <input asp-for="Input.ConfirmPassword" class="form-input" placeholder=" " autocomplete="new-password" required />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="login-button">
                <button type="submit">Register</button>
            </div>
        </form>

        <div class="forgot-password">
            <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login here</a></p>
        </div>
    </div>

    <div class="register-wrapper">
        <h2>Welcome to SwiftStocks</h2>
        <p>Start tracking your investments and gaining insight into the market today.</p>
        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log In</a>
    </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const inputs = document.querySelectorAll('.form-input');

    inputs.forEach(input => {
      if (input.value.trim() !== '') {
        input.parentElement.classList.add('filled');
      }

      input.addEventListener('input', () => {
        if (input.value.trim() !== '') {
          input.parentElement.classList.add('filled');
        } else {
          input.parentElement.classList.remove('filled');
        }
      });
    });
  });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
