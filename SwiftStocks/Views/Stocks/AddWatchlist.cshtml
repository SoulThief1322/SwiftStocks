<div class="watchlist-page">
    <h2>Add Stock to Watchlist</h2>
    <form asp-action="AddNewWatchlist" method="post">
        <div class="form-group">
            <label for="watchlist-name">Watchlist Name:</label>
            <input type="text" style="border: 1px solid black;" id="watchlist-name" name="watchlistName"
                class="form-control" placeholder="Enter watchlist name" required />
        </div>
        <button type="submit" class="btn btn-primary">Create Watchlist</button>
    </form>
</div>
